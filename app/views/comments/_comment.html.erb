<%= content_tag :div, class: 'media', id: "comment-#{comment.id}" do %>
  <div class="media-body">
    <small>
      <%= comment.user.name %> commented <%= time_ago_in_words(comment.created_at) %> ago
      <% if user_is_authorized_for_comment?(comment) || (comment.user == comment.id) %>
         | <strong><%= link_to "Delete", [comment.post, comment], method: :delete %></strong>
         <% end %>
    </small>
    <p><%= comment.body %></p>
  </div>
<% end %>
